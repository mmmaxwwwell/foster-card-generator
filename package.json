{
  "name": "foster-card-generator",
  "version": "3.0.0",
  "main": "main.js",
  "author": "Foster Card Generator",
  "scripts": {
    "generate-cards": "mkdir -p output && node src/generate-cards.js",
    "db:migrate": "node db/migrate.js",
    "db:reset": "node db/migrate.js --reset",
    "db:query": "sqlite3 db/animals.db",
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test:scraper": "node test-scraper-integration.js",
    "test:scraper:local": "USE_LOCAL_FILE=true node test-scraper-integration.js"
  },
  "license": "MIT",
  "description": "",
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "puppeteer": "^24.1.1",
    "qrcode": "^1.5.4",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.5",
    "sql.js": "^1.11.0",
    "tmp": "^0.2.3",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.foster-card-generator.app",
    "productName": "Foster Card Generator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "app/**/*",
      "src/**/*",
      "db/schema.sql",
      "db/migrate.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "docs/images/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
