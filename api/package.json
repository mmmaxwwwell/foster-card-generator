{
  "name": "foster-card-generator",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "drizzle-generate-migrations": "npx drizzle-kit generate",
    "drizzle-apply-migrations": "npx drizzle-kit migrate",
    "drizzle-push-db": "npx drizzle-kit push",
    "generate-cards": "mkdir -p output && node src/generate-cards.js",
    "start": "ts-node src/server.ts",
    "test": "jest --detectOpenHandles",
    "build": "node ./node_modules/typescript/bin/tsc",
    "build-frontend": "cd ../frontend && nix develop -c flutter build web && cd ../api && mkdir -p assets && cp -R ../frontend/build/web/* assets/ ",
    "start:server": "ts-node src/server.ts",
    "watch:api": "nodemon --watch src --ext ts --exec \"npm run build\"",
    "watch:frontend": "nodemon --watch ../frontend/src --ext js,ts,html --exec \"npm run build-frontend\"",
    "dev": "concurrently \"npm run watch:api\" \"npm run watch:frontend\" \"npm run start:server\""
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/static": "^8.1.0",
    "@libsql/client": "^0.14.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.1",
    "express": "^4.21.2",
    "fastify": "^5.2.1",
    "puppeteer": "^24.1.1",
    "qrcode": "^1.5.4",
    "tmp": "^0.2.3",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/fastify-static": "^0.14.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.4",
    "jest": "^29.2.3",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2"
  }
}
